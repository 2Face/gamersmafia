else
	images_cat = Term.single_toplevel(:slug => 'bazar').children.find(:first, :conditions => 'slug = \'babes\' And taxonomy = \'ImagesCategory\'').id
end

if images_cat then
%>
		<%=render :partial => '/imagenes/pick_from_gallery', :locals => { :category_id => images_cat}%>		
<% end -%>

<% end -%>

	<%mftext('Alegría del día') do %>
		<div style="width: auto; background: none; text-align: right; float: right; padding: 0px 4px 0 0;" >
		<a class="daily-joy-babe2" title="Ver chicas" onclick="setpref('sex', 'babe');"><img src="/images/blank.gif" /></a> 
		<a class="daily-joy-dude2"  title="Ver chicos" onclick="setpref('sex', 'dude');"><img src="/images/blank.gif" /></a> 

<% content_main do %>
  <% mftext('Sponsors') do %>

<table>
  <tr>
    <th>Nombre</th>
    <th>Url</th>
    <th>Imagen</th>
  </tr>

<% @clans_sponsors.each do |clans_sponsor| %>
  <tr class="<%=oddclass%>">
    <td><a href="/cuenta/clanes/sponsors/edit/<%=clans_sponsor.id%>"><%=clans_sponsor.name%></a></td>
    <td><%=clans_sponsor.url%></td>
    <td><%=fc_thumbnail(clans_sponsor.image, 'f', '88x31')%></td>
    <td><%= link_to 'Borrar', { :action => 'destroy', :id => clans_sponsor }, :confirm => '¿Estás seguro?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= render :partial => 'shared/pager2',
           :locals => {:collection => @clans_sponsors, :position => 'bottom'} %>

<br />

<strong><%= link_to 'Nuevo sponsor', :action => 'new' %></strong>
<% end -%>
<% end -%>

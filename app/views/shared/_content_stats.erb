<%mftext('Más información') do %>
<div>
  <div class="centered"><%=draw_rating(object.rating)%><br /><span class="infoinline">(<%=object.rating[1]%> valoraciones)</span></div>
  <div class="infoinline centered" style="margin-top: 9px; margin-bottom: 5px; line-height: 18px;"><span class="pageviews-count" style="line-height: 18px;" title="Leído <%=object.hits_anonymous + object.hits_registered%> veces"><%=object.hits_anonymous + object.hits_registered%></span> &nbsp; 
    <span class="comments-count" style="line-height: 18px;"><a title="Leer los comentarios de este contenido" href="<%=controller.url_for_content_onlyurl(object)%>#comments"><%=object.unique_content.comments_count%></a></span><% if %w(Download Demo).include?(object.class.name) then%> &nbsp; <span class="downloads-count" style="line-height: 18px;" title="Descargado <%=object.downloaded_times%> veces"><%=object.downloaded_times%></span><% end -%>
    <br /><br />
    <%
    udata = Comments.get_comments_ratings_for_content(object)
    cvt = udata[0]
    %>
    Ambiente: <strong><%=comments_icon(cvt.name.to_sym)%><%=cvt.name%></strong> <span class="infoinline"><%=(udata[1]*100).to_i%>%</span>
    </div>
</div>
<% end -%>